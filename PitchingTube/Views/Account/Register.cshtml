        <script type="text/javascript">

            $('#emailRegister').blur(function () {
                $.getJSON("/Account/IfFieldExistInDatabase?fieldValue=" + $(this).val() + "&type=email",
                function (x) {
                    if (x.isExist)
                        $('#emailRegisterMessage').text("Email is already exist");
                });
            });

            $('#name').blur(function () {
                $.getJSON("/Account/IfFieldExistInDatabase?fieldValue=" + $(this).val() + "&type=name",
                function (x) {
                    if (x.isExist)
                        $('#nameMessage').text("User name is already exist");
                });
            });

            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#avatarPreview').attr('src', e.target.result);
                        $('#AvatarPathTextBox').attr('value', e.target.result);
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }
        </script>
    }
